{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./lib/types"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts",
   "**/*.ts",
    "**/*.tsx",
     ".next/types/**/*.ts",
     "lib/**/*",              // Keep the lib/**/* for including all files in the lib directory
    "lib/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
